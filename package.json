{
  "name": "serum-multisig-cli",
  "version": "2.0.0",
  "description": "Starter to create node-command-line utilities",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "format:check": "prettier --list-different '{src,__mocks__,bin}/**/*.ts'",
    "format:write": "prettier --write '{src,__mocks__,bin}/**/*.ts'",
    "start": "env-cmd ts-node ./src/cli.ts",
    "start:help": "ts-node ./src/bin/order.bin.ts -h",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "report:coverage": "npm run test:coverage && codecov"
  },
  "bin": {
    "serum-multisig-cli": "./src/bin/order.bin.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kreuzerk/serum-multisig-cli.git"
  },
  "author": "Kevin Kreuzer",
  "license": "MIT",
  "dependencies": {
    "@project-serum/anchor": "^0.14.0",
    "@solana/spl-token": "^0.1.8",
    "@solana/web3.js": "^1.30.2",
    "commander": "^8.2.0",
    "env-cmd": "^10.1.0",
    "js-base64": "^3.7.2",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node": "^16.9.4",
    "jest": "^27.2.0",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}